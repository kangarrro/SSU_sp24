{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "G++ Debug LevelDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/linking_lab/build/main", // 실행 파일 경로
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "sourceFileMap": {
                "/path/to/leveldb/source": "${workspaceFolder}/linking_lab/leveldb"
            },
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}